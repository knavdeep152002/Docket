<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1> <%= title %> </h1>
    </div>
    
    <div class="box">
        <% list.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()" value="<%= item._id %>" name="checkbox">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listname" value="<%= title %>"></input>
            </form>
        <% }); %>
        <form class="item" action="/" method="post">
            <input type="text" name="add" placeholder="Add your todo" autocomplete="off">
            <button type="submit" name="button" value=<%= title %>>+</button>
        </form>
    </div>
    
    
        
</body>
</html>